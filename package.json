{
	"name": "obsidian-auto-accent",
	"version": "1.0.0",
	"description": "Automatically switches Obsidian's accent color based on system light/dark theme",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"zip": "bestzip obsidian-auto-accent.zip main.js manifest.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"accent",
		"theme"
	],
	"author": "Helalsoft",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/helalsoft/obsidian-auto-accent.git"
	},
	"devDependencies": {
		"@eslint/js": "9.30.1",
		"@types/node": "^22.13.1",
		"bestzip": "^2.2.1",
		"esbuild": "0.25.5",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"jiti": "2.6.1",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1"
	},
	"dependencies": {
		"obsidian": "latest"
	}
}
